{
    "name": "template-bot",
    "version": "1.0.0",
    "description": "A discord bot template for developers to clone so that they can start programming on top of a bot with basic functionality.",
    "main": "bot.js",
    "author": "ShockingShots",
    "scripts": {
        "lint": "eslint .",
        "start": "node bot.js",
        "start-dev": "nodemon bot.js",
        "debug-dependencies": "node src/dev_tools/madge.js",
        "generate-new-command": "node node_modules/@beanc16/discordjs-generators/src/generateNewCommand.js",
        "first-time-setup": "node node_modules/@beanc16/discordjs-generators/src/runFirstTimeSetup.js",
        "update-bot-settings": "node node_modules/@beanc16/discordjs-generators/src/updateBotSettings.js",
        "preversion": "npm run lint",
        "version": "git add -A",
        "postversion": "git push && git push --tags"
    },
    "dependencies": {
        "@beanc16/discordjs-common-commands": "^1.1.1",
        "@beanc16/discordjs-generators": "^1.1.1",
        "@beanc16/discordjs-helpers": "^1.4.0",
        "@beanc16/logger": "^1.3.1",
        "app-root-path": "^3.0.0",
        "discord.js": "^12.2.0",
        "dotenv": "^16.0.1"
    },
    "devDependencies": {
        "eslint": "^8.8.0",
        "madge": "^5.0.1",
        "nodemon": "^2.0.18"
    }
}
